<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/background1"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/logo_placeholder"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_marginTop="-14dp"
        android:src="@drawable/appheader"/>

    <ImageView
        android:id="@+id/store_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_placeholder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/bauhaus_store"/>

    <TextView
        android:id="@+id/address_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/store_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/phone_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_placeholder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/commercial_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_placeholder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="19sp"/>

    <Button
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_above="@+id/newsearch"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:background="@drawable/buttonshape"
        android:drawableLeft="@drawable/mapscale2"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:text="navigation"
        android:textColor="#1F1F1F"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/back"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttonshape"
        android:gravity="center"
        android:text="back"
        android:textColor="#1F1F1F"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/newsearch"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/back"
        android:background="@drawable/buttonshape"
        android:gravity="center"
        android:text="new search"
        android:textColor="#1F1F1F"
        android:textSize="22sp"/>

</RelativeLayout>